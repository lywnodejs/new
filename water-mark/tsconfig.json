{
    "compileOnSave": false,
    "compilerOptions": {
        "allowJs": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2016",
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true
    },
    "lib": [
        "dom",
        "es7"
    ],
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
