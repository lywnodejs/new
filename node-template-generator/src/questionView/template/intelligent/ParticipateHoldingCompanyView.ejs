    }

    <% if(!params.noSource) { %>
    var jsArr = JSON.parse('<%- JSON.stringify(params.jsArray) %>');
    loadJs(jsArr, ParticipateHoldingCompanyView<%- sn %>.onViewReady)
    <% } %>
</script>