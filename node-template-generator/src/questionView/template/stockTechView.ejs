<script>
  var stockTechView = {
    onViewReady: function () {
      var obj = JSON.parse('<%- JSON.stringify(info) %>');
      var kdata = obj.kline.data.detail;

      analysis_kline.initKData(kdata, "day", "<%= sn %>", obj.price, '');

      var txt = '<div class="hd_gl_white hd_gl_blue">' +
        '</div>' +
        '<h5>' + obj.memo + '</h5>';
      $('#day_huashu_jia<%= sn %>').html(txt);
    }
  }

  <% if(!params.noSource) {%>
    var jsSource = JSON.parse('<%- JSON.stringify(params.jsArray)%>');
    loadJs(jsSource,stockTechView.onViewReady);
  <%}%>


</script>



