/* components/protocol-view/index.wxss */

.protocol-box {
  display: flex;
  margin-bottom: 7px;
  padding-left: 9px;
}

.protocol-box .checkbox-img {
  flex: 0 0 20px;
  padding: 3px;
  width: 20px;
  height: 20px;
  box-sizing: border-box;
  display: block;
}

.protocol-box .text-box {
  flex: 1;
  font-size: 12px;
  line-height: 1.5;
  color: #b3b3b3;
  font-family: PingFangSC-Regular, PingFang SC;
}

.protocol-box .text-box,
.protocol-box .text-box .inline-view {
  display: inline;
}

.protocol-box .protocol-name {
  color: #F53148;
}


.popup-box {
  padding: 0 25px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 480px;
}

.popup-box .popup-title {
  font-size: 19px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  text-align: left;
  padding: 23px 0 5px;
}

.popup-box .read-tip {
  font-size: 16px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 22px;
  padding-bottom: 5px;
  
}

.van-popup__close-icon {
  top: 26px !important;
}

.popup-box .protocol-content {
  flex: 1;
}



.popup-box .popup-footer {
  padding-top: 5px;
  text-align: center;
  padding-bottom: 10px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}



.popup-footer .force-protocol-box {
  font-size: 12px;
  line-height: 1.5;
  color: #b3b3b3;
  font-family: PingFangSC-Regular, PingFang SC;
  text-align: center;
}

.force-protocol-box .agree-tip {
  text-align: center;
}

.popup-footer .force-protocol-box .inline-view {
  display: inline;
}

.popup-footer .force-protocol-box .protocol-name {
  color: #ff2c43;
}

.popup-box .popup-footer .apply-btn {
  height: 50px;
  line-height: 50px;
  border-radius: 50px;
  background: #EEA900;
  font-size: 17px;
  font-family: PingFangSC-Medium, PingFang SC;
  border: none;
  font-weight: 500;
}



.popup-box .popup-footer .apply-btn::after {
  border: none;
}


.popup-box .popup-footer .popup-btn {
  margin-top: 8px;
}

.popup-box .popup-footer .popup-btn-dis {
  background-color: #D9D9D9;
  border: none;
  color: white;
}

.popup-box .popup-footer .popup-btn-dis:after {
  border: none;
}