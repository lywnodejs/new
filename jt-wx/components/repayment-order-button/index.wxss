/* components/repayment-button/index.wxss */
.repayment-button{
  display: flex;
  justify-content: center;
  align-items: center;
  /* padding: 0 30rpx; */
  box-sizing: border-box;
  width: 172rpx;
  height: 64rpx;
  color: #EEA900;
  font-size: 13px;
  line-height: 64rpx;
  font-family: PingFangSC-Medium;
  border-radius: 20px;
  border: 1px solid #EEA900;
}

.repayment-button.highlighted{
  background-color: #EEA900;
  color: #FFFFFF;
  box-shadow: 0px 8rpx 24rpx -4rpx rgba(191, 135, 0, 0.5);
}