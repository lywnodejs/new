/* components/apply/item-view/id-front-view/index.wxss */
.card-img-box {
  height: 125px;
  box-shadow: 0 2px 13px 0 rgba(3, 29, 55, 0.06);
  border-radius: 4px;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #333333;
}

.has-auth-success {
  position: relative;
}

.has-auth-success:after {
  position: absolute;
  content: "";
  right: -5px;
  top: -5px;
  width: 20px;
  height: 20px;
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
  background-repeat: no-repeat;
  z-index: 9;
}

.card-img-box .id-img {
  width: 90px;
  height: 62px;
  margin-bottom: 15px;
}

.card-img-box .desc {
  color: #108EE9;
}


.idcard-popup{
	padding: 0 20px 15px;
	box-sizing: border-box;
}



.confirm-bt-box {
  position: fixed;
  left: 20px;
  right: 20px;
  bottom: 20px;
}

.confirm-bt-box .confirm-btn {
  background-color: #FF2C43;
  height: 50px;
  line-height: 50px;
  border-radius: 50px;
  font-size: 17px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #FFFFFF;
}

.confirm-bt-box .confirm-btn:after {
  border: none;
}

.confirm-bt-box .confirm-btn[disabled] {
  background-color: #ffd2d7;
  color: #fff;
}