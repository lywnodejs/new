/* components/home-swiper/index.wxss */
.home-swiper{
  margin-top: 30rpx;
  position: relative;
  height: 180rpx;
  /* width: 728rpx; */
}
.home-swiper image{
  display: block;
  width: 690rpx;
  height: 180rpx;
  border-radius: 5px;
}
.home-swiper swiper{
  width: 690rpx;
  margin-left: 19rpx;
  /* height: 272rpx; */
}
.home-swiper .swiper-dots{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  position: absolute;
  bottom: 10rpx;
  left: 0px;
}
.home-swiper .swiper-dots view{
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: rgba(255,255,255,0.6);
  margin-left: 5px;
}
.home-swiper .swiper-dots view.selected{
  width: 32rpx;
  height:8rpx;
  border-radius: 4px;
  background:rgba(255,255,255,1);
}