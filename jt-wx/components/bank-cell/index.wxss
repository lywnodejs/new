/* components/bank-cell/index.wxss */
.bank-cell {
  padding-left: 20px;
}
.bank-cell view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.error .name{
   color: red;
}
.bank-cell .header, .bank-cell .input{
  justify-content: space-between;
}
.bank-cell .header{
  color: #49525C;
  font-size: 15px;
  padding-right: 20px;
}
.bank-cell .i text{
  font-size: 13px;
  color: #8C8C8C;
  padding-left: 4px;
}
.bank-cell .input{
  border-bottom: 1px solid #E6E6E6;
  padding: 10px 0;
}
.bank-cell input{
  font-size:18px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  flex: 2;
}
.bank-cell .placeholder{
  font-size:18px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(205,209,214,1);
}
.bank-cell .i image, .bank-cell .logo{
  display: block;
  width: 16px;
  height: 16px;
}
.bank-cell .camera{
  width: 20px;
  height: 20px;
  display: block;
  padding: 0 21px;
}
.bank-cell .info{
  color: #4D4D4D;
  font-size: 13px;
  margin-top: 5px;
}
.bank-cell .name{
  padding: 0 10px 0 5px;
}
.bank-cell .btn{
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(0,129,255,1);
}