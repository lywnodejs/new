/* components/ad-swiper/index.wxss */
.ad-swiper{
  margin-top: 20px;
  position: relative;
}
.ad-swiper image{
  display: block;
  width: 100%;
  height: 90px;
  border-radius: 5px;
}
.ad-swiper swiper{
  height: 90px;
}
.ad-swiper .swiper-dots{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  position: absolute;
  bottom: 7px;
  left: 0px;
}
.ad-swiper .swiper-dots view{
  width: 7px;
  height: 2px;
  background-color: rgba(255,255,255,0.6);
  margin-left: 5px;
}
.ad-swiper .swiper-dots view.selected{
  height:3px;
  background:rgba(255,255,255,1);
}