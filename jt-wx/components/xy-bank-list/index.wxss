@import "../xy-select-list/index.wxss";

.xy-list-item{
	height: 83px;
}

.xy-list-item.disabled{
	opacity: .7;
}

.item-left{
	display: flex;
	align-items: center;
}
.logo{
	flex: 0 0 30px;
	width: 30px;
	height: 30px;
	border-radius: 15px;
	margin-right: 15px;
}
.item-label{
	flex: 1;
}

.bank-name{
	font-size:16px;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
	color: #333;
	margin-bottom: 5px;
}
.bank-desc{
	font-size: 13px;
	color: #999;
}
