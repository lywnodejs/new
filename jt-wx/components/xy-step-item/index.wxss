.xy-steps-item{
	display: flex;
	min-height: 65px;
	/*padding-bottom: 15px;*/
	box-sizing: border-box;
}
.step-title.no-border{
	border-right: none;
}
.step-title{
	position: relative;
	flex: 0 0 75px;
	border-right: 1px solid #EAEAEA;
}
.tag{
	position: absolute;
	right: -9.5px;
	top: 0;
	width: 11px;
	height: 11px;
	background-color: #eaeaea;
	border-radius: 11px;
	border: 4px solid #fff;
}
.tag:after{
	content: '';
	position: absolute;
	width: 5px;
	height: 5px;
	background-color: #fff;
	border-radius: 5px;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}
.step-content{
	flex: 1;
	padding-left: 35px;
	box-sizing: border-box;
	padding-bottom: 25px;
}
.item-right{
	flex: 0 0 60px;
	text-align: right;
	font-size:14px;
	font-family:PingFangSC-Regular,PingFang SC;
	color: #333;
}
.title, .content{
	color: #333;
	font-weight:500;
	margin-bottom: 4px;
}
.title{
	font-size:15px;
	font-family:PingFangSC-Medium,PingFang SC;

}
.content{
	font-size:16px;
	font-family:DIN-Medium,DIN;
}
.title-desc{
	font-size: 13px;
	color: #999;
}
.number{
	font-family:DIN-Medium,DIN;
}
.content-desc{
	font-size: 12px;
	font-family:PingFangSC-Regular,PingFang SC;
	color: #999;
}
