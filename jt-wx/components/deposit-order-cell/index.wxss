/* components/repayment-cell/index.wxss */
.repayment-cell{
  background-color: white;
  border-radius: 5px;
  padding:30rpx;
  margin-top: 12px;
}
.repayment-cell image{
  width: 6px;
  height: 10px;
}
.repayment-cell .period-view{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  font-size: 15px;
  color: #999999;
  padding-bottom: 20rpx;
  border-bottom: 1px solid rgba(230, 230, 230, 1);
}

.repayment-cell .period-view view{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #337EFE;
  font-weight: 400;
}
.repayment-cell .period-view .right-text.end{
  color: #999999;
}
.repayment-cell .period-view .name{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #333333;
  line-height: 40rpx;
  display: block;
  margin-right: 20rpx;
}
.repayment-cell .stage{
  padding: 0 5px;
  background-color: #EAF2FE;
  border-radius: 1px;
  font-size: 24rpx;
  line-height: 40rpx;
  color: #337EFE;
  margin-right: 10rpx;
}
.repayment-cell .period{
  margin-top: 10rpx;
}
.repayment-cell .period text {
  font-size: 24rpx;
  font-weight: 400;
  color: #666666 !important;
  line-height: 34rpx;
}
.repayment-cell .period text:last-child{
  color: #999999;
}

.repayment-cell .content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  font-size: 12px;
  font-family: PingFangSC-Medium;
  color: #A6A6A6;
}
.repayment-cell .amount-view,.date-view{
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.repayment-cell .date-view>text:first-child{
  margin: 5px 0 2px;
}
.repayment-cell .amount{
  font-size: 48rpx;
  line-height: 52rpx;
  color: #666666;
  font-weight: bold;
}
.repayment-cell .amount-view>text{
  margin-top: 10rpx;
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
  font-weight: 400;
}