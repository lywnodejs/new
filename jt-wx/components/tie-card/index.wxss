/* components/tie-card/index.wxss */
.tie-card{
  background: #F4F5F7;
  padding: 21px 18px;
  border-radius: 3px;
}
.tie-card image{
  width: 16px;
  height: 16px;
  display: block;
  padding-left: 5px;
}
.tie-card view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tie-card view text:first-child{
  width: 85px;
  font-size:13px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(128,128,128,1);
}
.tie-card view text:last-child{
  font-size:14px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
}
.tie-card .card{
  padding: 12px 0;
}

.tie-cell-alter>view{
  width: 600rpx;
  border-radius: 5px;
}
.tie-cell-alter text{
  display: block;
}
.tie-cell-alter .header{
  text-align: center;
  padding-bottom: 15px;
  padding-top: 20px;
  font-size:17px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.tie-cell-alter .content{
  padding: 0 30px 23px;
  font-size:15px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:21px;
  padding-bottom: 23px;
}

.tie-cell-alter .footer{
  height: 55px;
  line-height: 55px;
  font-size:17px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:bold;
  color:rgba(252,129,0,1);
  text-align: center;
  border-top: 1px solid #E6E6E6;
}