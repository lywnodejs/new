/* components/exclusive-banner/index.wxss */
.exclusive-banner {
  margin-top: 10px;
  position: relative;
  margin: 0 auto;
  width: 726rpx;
  height: 480rpx;
}
.exclusive-banner swiper{
  height: 480rpx;
}
.exclusive-banner .swiper-dots {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: flex-end;
  position: absolute;
  bottom: 38rpx;
  left: 0px;
}

.exclusive-banner .swiper-dots view {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #B7BED0;
  margin-left: 5px;
}

.exclusive-banner .swiper-dots view.selected {
  width: 32rpx;
  height: 8rpx;
  border-radius: 4px;
}


/*  banner内容 */
.exclusive-banner .swiper-item {
  height: 480rpx;
  margin-left: -2rpx;
  box-shadow: 0px 8rpx 24rpx -4rpx rgba(125,126,129,0.08);
  border-radius: 8rpx;
  overflow: hidden;
}

.exclusive-banner .swiper-item .bg {
  position: absolute;
  top: 0;
  /* left: 18; */
  /* z-index: -1; */
  width: 100%;
  height: 480rpx;
}

.exclusive-banner .swiper-item .top {
  display: flex;
  align-items: center;
  height: 50rpx;
  position: absolute;
  top: 48rpx;
  right: 30rpx;
  z-index: 2;
  font-size: 24rpx;
  color: #FFF8EB;
  line-height: 50rpx;
}

.exclusive-banner .swiper-item .title {
  position: relative;
  z-index: 2;
  width: 100%;
  text-align: center;
  font-size: 40rpx;
  font-weight: 500;
  color: #B49138;
  margin-top: 50rpx;
  line-height: 56rpx;
}

.exclusive-banner .swiper-item .num {
  position: relative;
  z-index: 10;
  padding-top: 18rpx;
  width: 100%;
  text-align: center;
  font-size: 84rpx;
  color: #F65348;
  font-weight:bold;
  text-align: center;
  line-height: 92rpx;
}

.exclusive-banner .swiper-item .info {
  position: relative;
  z-index: 10;
  padding-top: 14rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #E0B1A5;
  font-weight:500;
  text-align: center;
  line-height: 34rpx;

}

.exclusive-banner .swiper-item .tag{
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-content: center;
  margin-top: 10rpx;
  width: 100%;
  color: #6E7793;
  font-size: 24rpx;
}
.exclusive-banner .swiper-item .placeholder{
  height: 14px;
}
.exclusive-banner .swiper-item .tag view{
  display: inline-block;
  padding: 0 10rpx;
  font-size: 22rpx;
  color: #ca875e;
  background-color: #FFEEC4;
  border-radius: 2rpx;
  margin-right: 10rpx;
}
.exclusive-banner .swiper-item .tag view:nth-last-of-type(1){
  margin-right: 0;
}
.exclusive-banner .swiper-item .tag image{
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
  float: left;
  margin-top: 5rpx;
}


.exclusive-banner .swiper-item .button {
  position: relative;
  z-index: 9;
  text-align: center;
  margin: 0 auto;
  width: 418rpx;
  height: 80rpx;
  background: #EEA900;
  box-shadow: 0px 8rpx 24rpx -4rpx rgba(191,135,0,0.5);
  border-radius: 40rpx;
  color: #FFFFFF;
  font-weight: 500;
  line-height: 80rpx;
  font-size: 28rpx;
  margin-top: 40rpx;
}