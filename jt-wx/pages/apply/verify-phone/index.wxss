/* pages/apply/verify-phone/index.wxss */

page {
  background: #FFFFFF;
  box-sizing: border-box;
  padding: 20px 20px 40px;
  font-family: PingFangSC-Medium, PingFang SC;
}
.info-box {
  padding-top: 16px;
}

.title {
  font-size: 15px;
  color: #49525c;
  font-family: PingFangSC-Regular, PingFang SC;
}



.input-class {
  font-size: 18px;
  font-family: PingFangSC-Medium, PingFang SC;
  color: #333;
} 


.error-msg {
  color: #ff2c43;
  font-size: 12px;
  margin-top: 5px;
}


.van-field__clear-root .van-icon-clear {
  width: 12px;
  height: 12px;
  background-image: url("data:image/png;base64,");
  background-size: 100% 100%;
  background-repeat: no-repeat;
}

.van-field__clear-root .van-icon-clear:before {
  content: "";
}


.btn-box {
  padding: 0 0 50px 0;
  margin-bottom: 30px;
}


.btn-box .submit-btn {
  width: 650rpx;
  height: 50px;
  line-height: 50px;
  border-radius: 25px;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: #fff;
  background: #ff2c43;
  margin-top: 30px;
}

.btn-box .submit-btn:after {
  border: none;
}

.btn-box .submit-btn[disabled] {
  background-color: #ffd2d7;
  color: #fff;
}
