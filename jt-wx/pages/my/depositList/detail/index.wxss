/* pages/my/depositList/detail/index.wxss ,*/
page{
  background-color: #F3F3F3;
}
.detail{
  width: 100%;
}
.detail .header{
  width: 100%;
  height: 476rpx;
  box-sizing: border-box;
  padding:30rpx;
  background-color: #ffffff;
  border-top: 1px solid #F3F3F3;
}
.detail .advance{
  width: 100%;
  height: 36rpx;
  background-color:#ffffff;
  margin-top: 10px;
  padding: 14px 15px;
  font-size: 14px;
  color: #333333;
  position: relative;
}
.detail .advance image{
  width: 10px;
  height: 15px;
  position: absolute;
  top: 15px;
  right: 52px;
}
.header .top{
  padding-bottom: 30rpx;
  border-bottom: 1px solid #F3F3F3;
}
.header .title{
  width: 100%;
  font-size: 34rpx;
  color: #333333;
  font-weight: 400;
  line-height: 48rpx;
  display: flex;
  align-items: center;
}
.header .title>text{
  display: inline-block;
  font-size: 20rpx;
  line-height: 28rpx;
  color: #F65348;
  padding: 2rpx 10rpx;
  background-color: rgba(246, 83, 72, 0.1);
  margin-left: 10rpx;
}
.title_info{
  margin-top: 10rpx;
  width: 100%;
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
}
.title_info >text{
  color: #337EFE;
}
.h_content{
  width: 100%;
}
.h_content .h_content_title{
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  font-weight: 400;
}
.h_content .h_content_num{
  width: 100%;
  text-align: center;
  font-size: 60rpx;
  color: #F65348;
  line-height: 66rpx;
  font-weight: bold;
}
.h_content .h_content_num.err{
  color: #999999;
}
.header_footer{
  width: 100%;
  display: flex;
  margin-top: 40rpx;
}
.header_footer .h_f_item{
  width: 40%;
  display: flex;
  flex-wrap: wrap;
}
.header_footer .h_f_item:nth-of-type(1){
  margin-right: 20%;
}
.header_footer .h_f_item text{
  width: 100%;
  text-align: center;
}
.header_footer .h_f_item text:nth-of-type(1){
  margin-bottom: 10rpx;
  color: #999999;
  line-height: 34rpx;
  font-weight: 400;
  font-size: 24rpx;
}
.header_footer .h_f_item text:nth-of-type(2){
  margin-bottom: 10rpx;
  color: #666666;
  line-height: 44rpx;
  font-weight: 400;
  font-size: 32rpx;
}
.header_footer .h_f_item:nth-of-type(2) text:nth-of-type(2){
  color: #FC8100;
}
.header_footer .h_f_item:nth-of-type(2) text:nth-of-type(2).err{
  color: #F65348;
}

.content{
  margin-top: 20rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 42rpx 30rpx;
  background-color: #ffffff;
}
.content .item{
  margin-top: 40rpx;
  border-left: 2px solid rgba(234, 234, 234, 1);
  position: relative;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding-bottom: 36rpx;
  padding-left: 34rpx;
}
.content .item:nth-last-of-type(1){
  border-left: 2px solid #ffffff;
}
.content .item image{
  width: 22rpx;
  height: 22rpx;
}
.content .item_top text{
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  font-weight: 400;
  margin-left: 22rpx;
}
.content .item_top{
  position: absolute;
  top: -38rpx;
  left: -12rpx;
  display: flex;
  align-items: center;
}
.content .item view:nth-of-type(2){
  width: 100%;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666666;
  line-height: 34rpx;
  font-weight: 400;
}
.content .item view.time{
  width: 100%;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  font-weight: 400;
}
