/* pages/my/depositList/index.wxss */
page{
  background-color: #F3F3F3;
}
.my-deposit-order{
  width: 100%;
}
.my-deposit-order .header{
  width:100%;
  height: 200rpx;
  background-color: #FFFFFF;
  display: flex;
  border-top: 1px solid #F3F3F3;
}
.my-deposit-order .header .item{
  position: relative;
  width: 50%;
  padding-top: 40rpx;
  box-sizing: border-box;
}
.my-deposit-order .header .item view{
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #999999;
  font-weight: 400;
}
.my-deposit-order .header .item view:nth-of-type(2){
  margin-top: 20rpx;
  font-size: 60rpx;
  line-height: 66rpx;
  color: #F65348;
  font-weight: bold;
}
.my-deposit-order .header .item .line{
  position: absolute;
  right: 0;
  top: 48rpx;
  width: 1px;
  height: 112rpx;
  background-color: rgba(230, 230, 230, 1);
}
.my-deposit-order .content{
  width: 690rpx;
  margin: 0 auto;
  padding-bottom: 40rpx;
}