/* pages/my/secureCenter/idCancel/detail/index.wxss */
page{
  background-color: #f3f3f3;
}
.idCancel{
  width: 100%;
}
.idCancel ,title{
  width: 100%;
  background-color: #FEEDEC;
  font-size: 28rpx;
  color: #F65348;
  font-weight: 400;
  line-height: 40rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

/* components/cell/index.wxss */
.cell-container .item{
  background-color: #ffffff;
  height: 96rpx;
  padding:28rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.cell-container .line{
  height: 1px;
  width: 100%;
  background-color: #EDEDED;
}
.cell-container .item>view{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.cell-container .item>view text{
  font-size: 28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:#333333;
}
.cell-container .item view:last-child text{
  font-size:28rpx;
  font-weight:400;
  color:#333333;
}

.but{
  width: 100%;
  height: 96rpx;
  background-color: #ffffff;
  font-size: 28rpx;
  line-height: 96rpx;
  font-weight: 400;
  color: #333333;
  text-align: center;
  margin-top: 20rpx;
}


.my-alter>view{
  width: 600rpx;
  border-radius: 5px;
}
.my-alter text{
  display: block;
}
.my-alter .content{
  text-align: center;
  padding: 20px 30px;
  font-size:15px;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:21px;
}
.my-alter .content .title{
  font-size:17px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 15px;
}
.my-alter .content .list{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  line-height: 42rpx;
}
.my-alter .content .list:nth-last-of-type(1){
  margin-bottom: 10rpx;
}
.my-alter .content .list image{
  width: 32rpx;
  height: 32rpx;
}
.my-alter .footer, .my-alter .bottom{
  height: 55px;
  line-height: 55px;
  font-size: 17px;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 500;
  color:rgba(252,129,0,1);
  text-align: center;
  border-top: 1px solid #E6E6E6;
  display: flex;
  flex-direction: row;
}
.my-alter .footer text{
  width: 50%;
  text-align: center;
}
.my-alter .footer text:first-child{
  border-right: 1px solid #E6E6E6;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(154,154,154,1);
}

.my-alter .bottom{
  justify-content: center;
}