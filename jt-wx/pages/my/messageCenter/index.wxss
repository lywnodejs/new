/* pages/my/messageCenter/index.wxss */
page{
  background-color: #f3f3f3;
}
.messageCenter{
  width: 100%;
  height: auto;
  padding-bottom: 40rpx;
}
.messageCenter .list{
  width: 690rpx;
  margin: 0 auto 40rpx;
}
.messageCenter .list .time{
  margin: 30rpx auto 20rpx;
  width: 184rpx;
  height: 46rpx;
  background-color: #cecece;
  border-radius: 23rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  text-align: center;
  font-weight: 400;
  color: #ffffff;
}
.messageCenter .list .item{
  margin-top: 30rpx;
  padding-top: 34rpx;
  width: 100%;
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0px 8rpx 24rpx -4rpx rgba(125,126,129,0.08);
}
.messageCenter .list .item .title{
  display: flex;
  align-items: center;
  padding: 34rpx 24rpx 24rpx;
  width: 100%;
  height: 60rpx;
  box-sizing: border-box;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 48rpx;
  color: #333333;
}
.messageCenter .list .item .title image{
  width: 60rpx;
  height: 60rpx;
}
.messageCenter .list .item .title text{
  display: block;
  width: 560rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.messageCenter .list .item .center{
  padding: 24rpx 24rpx 24rpx;
  box-sizing: border-box;
  width: 100%;
  max-height: 100rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 28rpx;
  color: #666666;
  font-weight: 400;
  line-height: 40rpx;
}
.messageCenter .list .item .button{
  width: 630rpx;
  height: 74rpx;
  margin: 30rpx auto 0;
  box-sizing: border-box;
  border-top: 1px solid rgba(230, 230, 230, 1);
  font-size: 24rpx;
  color: #337efe;
  line-height: 34rpx;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.messageCenter .list .item .button image{
  width: 32rpx;
  height: 32rpx;
}