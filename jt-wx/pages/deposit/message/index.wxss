/* pages/deposit/message/index.wxss */
page{
  background-color: #f3f3f3;
}

.nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 48px;
  color: #333333;
  background-color: #ffffff;
  font-size: 17px;
  font-family: PingFangSC-Medium;
  padding-left: 30px;
  border-bottom: 1px solid #f3f3f3;
}
.nav text:nth-of-type(1){
  font-size: 28rpx !important;
}
.nav text:nth-of-type(2){
  font-size: 34rpx;
  font-weight: 600;
}


.header{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  background-color: #ffffff;
}
.header>image{
  width: 100rpx;
  height: 100rpx;
  margin: 60rpx 0 40rpx;
}
.header .text{
  width: 100%;
  text-align: center;
  font-size:34rpx;
  line-height: 48rpx;
  color: #333333;
  font-weight: 400;
}


.content{
  margin-top: 100rpx;
  box-sizing: border-box;
  width: 100%;
  padding: 42rpx 30rpx;
  background-color: #ffffff;
}
.content .item{
  border-left: 2px solid #F65348;
  position: relative;
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  height: 90rpx;
  padding-left: 34rpx;
}
.content .item:nth-last-of-type(1){
  margin-top: 34rpx;
  border-left: 2px solid #ffffff;
}
.content .item image{
  width: 22rpx;
  height: 22rpx;
}
.content .item_top text{
  font-size: 28rpx;
  color: #666;
  line-height: 40rpx;
  font-weight: 400;
  margin-left: 22rpx;
}
.content .item .item_top text:nth-of-type(2){
  margin-left: 0rpx;
}
.content .item:nth-of-type(1) .item_top text{
  color: #F65348;
}
.content .item .item_top text:nth-last-of-type(1){
  color: #999999;
}
.content .item_top{
  position: absolute;
  top: -38rpx;
  left: -12rpx;
  display: flex;
  align-items: center;
}
.content .item:nth-of-type(2) .item_top>image{
  margin-left: -1rpx;
}
.content .item view:nth-of-type(2){
  width: 100%;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666666;
  line-height: 34rpx;
  font-weight: 400;
}
.content .item view.time{
  width: 100%;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
  font-weight: 400;
}
.message .list{
  width: 100%;
  border-top: 1px solid #f3f3f3;
}
.list .item{
  height: 88rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
}
.list .item:nth-last-of-type(1){
  height: 116rpx;
  border-top: 20rpx solid #f3f3f3;
}
/* pages/apply/result/index.wxss */

.top-box{
	background-color: #fff;
	text-align: center;
	padding: 50px 80rpx 40px;
	box-sizing: border-box;
}
.top-box image{
	width: 50px;
	height: 50px;
	margin-bottom: 20px;
}
.top-box .top-process{
	font-size:16px;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
	color: #333;
	margin-bottom: 5px;
}

.top-box .top-desc{
	font-size:15px;
	font-family:PingFangSC-Regular,PingFang SC;
	color: #999;
}

.tips-box {
	padding: 20px 60px 50px 20px;
  box-sizing: border-box;
  background: #fff;
}

.tips-box .title{
	position: relative;
	font-size:14px;
	font-family:PingFangSC-Regular,PingFang SC;
	color: #999;
	padding-left: 13px;
	margin-bottom: 10px;
}
.tips-box .title:before{
	position: absolute;
	content: '';
	background-color: #333;
	width: 6px;
	height: 6px;
	top: 0;
	bottom: 0;
	border-radius: 6px;
	margin: auto 0;
	left: 0;
}

.tips{
	font-size:13px;
	font-family:PingFangSC-Regular,PingFang SC;
	color: #808080;
	margin-bottom: 8px;
}
.tips text{
	position: relative;
	padding: 0 11px 0 4px;
	color: #FC8100;
}
.tips text:after{
	position: absolute;
	content: "";
	width: 0;
	height: 0;
	border-top: 3px solid transparent;
	border-left: 4px solid #FC8100;
	border-bottom: 3px solid transparent;
	border-right: 3px solid transparent;
	top: 0;
	bottom: 0;
	right: 0;
	margin: auto;
}

.qr-code{
	text-align: center;
	margin-top: 25px;
}
.qr-code image{
	width: 100px;
	height: 100px;
	margin-bottom: 16px;
}
.qr-code view{
	font-size:12px;
	font-family:PingFangSC-Regular,PingFang SC;
	color: #808080;
	margin-bottom: 32px;
}
.qr-code button{
	width:90px;
	height:36px;
	line-height: 36px;
	border-radius:25px;
	border:1px solid rgba(255,44,67,1);
	color: #FF2C43;
	font-size:15px;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
}
