page{
  background-color: #F3F3F3;
  height: 100vh;
  overflow: hidden;
}

.loading{
  width: 100%;
  height: 100rpx;
  position: absolute;
  top: -80rpx;
  left: 0;
  display: flex;
  justify-content: center;
  background-color: #d88508;
}
.loading .van-loading__text{
  color: #ffffff;
  font-size: 30rpx;
}

.loans{
  width: 100%;
  min-height: calc(100vh - 250rpx);
  position: absolute;
  top: 250rpx;
  z-index: 10;
  box-sizing: border-box;
  padding-bottom: 240rpx;
}

.bg {
  width: 100%;
  height: 728rpx;
  position: relative;
  top: 0;
  left: 0;
  /* background-color: #e39405; */
  /* background: linear-gradient(to bottom, #d88508 80%, #F3F3F3); */
}

.bg .img_bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.bg>view {
  width: 100%;
  position: relative;
  z-index: 3;
}

.bg .logo {
  width: 310rpx;
  height: 80rpx;
  margin-top: 130rpx;
  margin-left: 30rpx;
}

.bg .logo2 {
  width: 168rpx;
  height: 92rpx;
  position: relative;
  top: 10rpx;
  left: 70rpx;
}

.bg>view>view {
  width: 100%;
  box-sizing: border-box;
  padding-left: 30rpx;
  margin-top: 14rpx;
}

.bg>view>view text {
  font-size: 28rpx;
  color: #FAEDCC;
  margin-right: 20rpx;
}
.header{
  width: 100%;
  height: 900rpx;
  margin: 0 auto;
  position: relative;
}
.header>image{
  width: 100%;
  position: absolute;
  height: 900rpx;
  top: 0px;
  left: 0;
}
.nav{
  width: 100%;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background-color: #F65348;
  align-items: center;
  height: 44px;
  color: white;
  font-size: 17px;
  font-family: PingFangSC-Medium;
}
 .nav.left{
  justify-content: flex-start;
  padding-left: 30px;
}

.loans>.title{
  margin: 0 auto;
  width: 686rpx;
  margin-top: 40rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  font-size: 34rpx;
  color: #14284A;
  font-weight: 600;
  line-height: 44rpx;
}
.loans .wealth{
  margin: -40rpx auto 0;
  width: 690rpx;
  background-color: #FFFFFF;
  box-shadow: 0px 8rpx 24rpx -4rpx rgba(125,126,129,0.08);
  border-radius: 10rpx;
  padding: 30rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}
.loans .wealth .content>view{
  border-bottom: 1rpx solid rgba(230, 230, 230, 1);
}
.loans .wealth .content>view:nth-last-of-type(1){
  border: none;
}

.loans .header .content{
  padding-top: 110rpx;
}
.loans .header .content .top {
  display: flex;
  align-items: center;
  height: 50rpx;
  position: absolute;
  top: 48rpx;
  right: 30rpx;
  z-index: 2;
  font-size: 24rpx;
  color: #FFF8EB;
  line-height: 50rpx;
}

.loans .header .content .title {
  position: relative;
  z-index: 2;
  width: 100%;
  text-align: center;
  font-size: 56rpx;
  color: #B49138;
  font-weight: 500;
  line-height: 80rpx;
}

.loans .header .content .num {
  position: relative;
  z-index: 10;
  padding-top: 18rpx;
  width: 100%;
  text-align: center;
  font-size: 128rpx;
  color: #F65348;
  font-weight:bold;
  text-align: center;
  line-height: 140rpx;
}
.loans .header .content .num text{
  font-size: 40rpx;
  line-height: 56rpx;
}

.loans .header .content .info {
  position: relative;
  z-index: 10;
  padding-top: 20rpx;
  width: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #999999;
  font-weight:500;
  text-align: center;
  line-height: 40rpx;

}

.loans .header .content .tag{
  position: relative;
  z-index: 2;
  display: flex;
  justify-content: center;
  align-content: center;
  margin-top: 10rpx;
  width: 100%;
  color: #6E7793;
  font-size: 24rpx;
  margin-top: 40rpx;
  margin-block: 50rpx;
}
.loans .header .content .tag view{
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #CDA037;
  background-color: #FFEEC4;
  border-radius: 2rpx;
  margin-right: 10rpx;
}
.loans .header .content .tag view:nth-last-of-type(1){
  margin-right: 0;
}


.loans .header .content .button {
  position: relative;
  z-index: 9;
  text-align: center;
  margin: 0 auto;
  width: 530rpx;
  height: 112rpx;
  background: #EEA900;
  box-shadow: 0px 8rpx 24rpx -4rpx rgba(191,135,0,0.5);
  border-radius: 56rpx;
  color: #FFFFFF;
  font-weight: 500;
  line-height: 112rpx;
  font-size: 40rpx;
  margin-top: 80rpx;
}


.index_footer {
  position: absolute;
  bottom: 0;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-content: flex-start;
  box-sizing: border-box;
  width: 100%;
  margin: 0 auto;
}

.index_footer .logo {
  width: 542rpx;
  height: 63rpx;
  margin: 40rpx auto 0;
}

.index_footer .info {
  width: 528rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #C4C4C4;
  line-height: 34rpx;
  margin-top: 10rpx;
  text-align: center;
  padding-bottom: 30rpx;
}

.index_footer .tags {
  display: flex;
  margin-top: 40rpx;
}

.index_footer .tag {
  width: 130rpx;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #B7BED0;
}

.index_footer .tag image {
  width: 80rpx;
  height: 80rpx;
  background-color: #fef8f4;
  border-radius: 50%;
}

.index_footer .tag view {
  width: 100%;
  text-align: center;
  margin-top: 16rpx;
}