/* pages/loans/deposit/index.wxss */
page{
  background-color: #F3F3F3;
}
.deposit{
  width: 100%;
  height: calc(100vh - 160rpx);
  overflow:auto;
}
.deposit .header{
  width: 100%;
  height: 322rpx;
  background-color: #ffffff;
}
.deposit .header .title{
  padding-top: 40rpx;
  text-align: center;
  color: #333333;
  font-size: 34rpx;
  line-height: 48rpx;
  font-weight: 500;
}
.deposit .header .info{
  padding-top: 30rpx;
  text-align: center;
  color: #999999;
  font-size: 24rpx;
  line-height: 34rpx;
  font-weight: 400;
}
.deposit .header .num{
  font-size: 44rpx;
  color: #F65348;
  line-height: 60rpx;
  text-align: center;
}
.deposit .header .tags{
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
}
.deposit .header .tag{
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 28rpx;
  font-weight: 400;
  border-right: 2rpx solid #E6E6E6;
}
.deposit .header .tag:nth-last-of-type(1){
  border: none;
}
.deposit .date_scope{
  margin-top: 20rpx;
  width: 100%;
  height: 194rpx;
  background-color: #fff;
}
.deposit .date_scope .top{
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  margin: 0 auto;
  width: 692rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
}
.deposit .date_scope .center{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 692rpx;
  height: 20rpx;
  margin: 20rpx auto 0;
}
.deposit .date_scope .center .d{
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #D9D9D9;

}
.deposit .date_scope .center .d.done{
  background-color: #F65348;
}
.deposit .date_scope .center .line{
  width: 630rpx;
  height: 4rpx;
  background-color: #F65348;
}
.deposit .date_scope .footer{
  display: flex;
  justify-content: space-between;
  padding-top: 30rpx;
  margin: 0 auto;
  width: 692rpx;
  font-size: 24rpx;
  color: #999999;
  line-height: 34rpx;
}
.deposit .detail_info{
  margin-top: 20rpx;
  width: 100%;
  background-color: #ffffff;
  padding: 28rpx;
  box-sizing: border-box;
}
.deposit .detail_info .title{
  font-size: 28rpx;
  font-weight: 500;
  color: #333333;
  line-height: 40rpx;
}
.detail_info .text{
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  color: #666666;
  padding-top: 40rpx;
  white-space: pre-wrap;
}
.button{
  position: fixed;
  bottom: 30rpx;
  left: 28rpx;
  width: 690rpx;
  height: 100rpx;
  background-color: #EEA900;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 100rpx;
}