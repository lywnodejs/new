/* pages/order/index/index.wxss */
.order {
  background-color: #F7F7F7;
  height: 100%;
}
.order .repayment-info>view{
  background-color: white;
  display: flex;
  flex-direction: column;
  font-size: 14px;
  color: #666666;
  padding: 23px 30px 10px;
}
.order .repayment-info image{
  height: 6px;
  width: 100%;
  display: block;
}
.order .repayment-info .amount-title{
  font-family: PingFangSC-Medium;
}
.order .repayment-info .amount{
  color: #333333;
  font-size: 40px;
  font-family: PingFangSC-Medium;
  margin: 2px 0 10px;
}
.order .repayment-content, .all {
  padding: 0 15px 15px;
}
.order .tab{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  height: 48px;
  background-color: white;
  border-bottom: 0.5px solid #E6E6E6;
}
.order .tab text{
  display: block;
  height: 48px;
  line-height: 48px;
  box-sizing: border-box;
  position: relative;
  font-size: 16px;
  color: #333333;
}
.order .tab text.active::after{
  content: '';
  display: block;
  width: 36px;
  height: 4px;
  background-color: #EEA900;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -18px;
}
.order .tab text.active{
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:bold;
}
.order .empty {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 70%;
}
.order .empty image{
  width: 70px;
  height: 93px;
  display: block;
}
.order .empty text {
  font-size:15px;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:bold;
  color:rgba(179,179,179,1);
  margin-top: 20px;
}