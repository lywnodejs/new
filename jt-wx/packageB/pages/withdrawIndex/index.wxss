/* pages/withdraw/index/index.wxss */
page {
	background-color: #F9FAFB;
}

.amount-box {
	background-color: #fff;
	padding: 30px 20px 10px 20px;
	box-sizing: border-box;
}

.invalid-amount .input-box {
	border-bottom-color: #FF2C43;
}

.input-box,
.amount-box .desc {
	display: flex;
	align-items: center;
}

.input-box {
	padding-bottom: 8px;
	border-bottom: 1px solid #858799;
	margin-bottom: 10px;
}

.input-box text {
	flex: 0 0 25px;
	font-size: 20px;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #000;
}

.input-box input {
	font-size: 26px;
	font-family: PingFangSC-Regular, PingFang SC;
	color: #333333;
	height: 37px;
	flex: 1;
}

.input-box input.input-placeholder {
	color: #CDD1D6;
}

.input-close-icon {
	flex: 0 0 30px;
	text-align: right;
}

.input-close-icon image {
	width: 12px;
	height: 12px;
}

.amount-box .desc {
	font-size: 13px;
	font-family: PingFangSC-Regular, PingFang SC;
	color: #999;
	justify-content: space-between;
	align-items: baseline;
}

.invalid-amount .error-tip {
	color: #FF2C43;
	margin-bottom: 10px;
}

.invalid-amount .range-tip {
	color: #999;
}

.amount-box .range-tip text:last-child {
	font-size: 14px;
	color: #FC8100;
	height: 100%;
}

.page-footer {
	position: fixed;
	left: 0;
	bottom: 0;
	width: 100%;
	padding: 10px 25px;
	box-sizing: border-box;
	background-color: #fff;
}

.protocol-box {
	display: flex;
	margin-bottom: 5px;
}

.checkbox {
	flex: 0 0 19px;
}

.text-box {
	flex: 1;
	font-size: 12px;
	color: #b3b3b3;
	font-family: PingFangSC-Regular, PingFang SC;
}

.text-box,
.text-box view {
	display: inline;
}

.protocol-name {
	color: #FF2C43;
	text-decoration: underline;
}

.amount-info {
	padding: 15px 15px 100px;
	box-sizing: border-box;
}

.amount-info>view {
	margin-bottom: 15px;
}

.info-item {
	display: flex;
	height: 55px;
	justify-content: space-between;
	align-items: center;
	background-color: #fff;
	border-radius: 4px;
	padding-left: 20px;
	padding-right: 20px;
}

.info-item>view {
	flex: 1;
}

.info-item .label-text {
	font-size: 15px;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #333;
	flex: 0 0 80px;
}

.item-content {
	text-align: right;
	font-size: 14px;
	font-family: PingFangSC-Regular, PingFang SC;
	color: #4d4d4d;
}

.item-value {
	position: relative;
	padding-right: 15px;
}

.item-value:after {
	position: absolute;
	content: "";
	width: 0;
	height: 0;
	border-top: 4px solid transparent;
	border-left: 5px solid #999999;
	border-bottom: 4px solid transparent;
	border-right: 3px solid transparent;
	top: 0;
	bottom: 0;
	right: 0;
	margin: auto;
	transition: all 300ms;
}

.no-tag {
	padding-right: 0;
}

.no-tag:after {
	display: none;
}

.has-card {
	display: flex;
	align-items: center;
	text-align: right;
	justify-content: flex-end;
}

.has-card image {
	width: 20px;
	height: 20px;
	margin-right: 5px;
}

.down-tag:after {
	transform: rotate(90deg);
}

.up-tag:after {
	transform: rotate(270deg);
}

.invalid-value {
	color: #999999;
}

.info-box {
	position: relative;
	background-color: #fff;
	padding: 0 20px;
}
.info-box .Range{
	position:absolute;
	bottom:10px;
	width: 100%;
	font-size: 13px;
    font-family: PingFangSC-Regular, PingFang SC;
    color: #999;
}
.Range .right{
	position:absolute;
	right: 38px;
}
.bottom-padd{
	padding-bottom: 20px;
}

.info-box .info-item {
	padding: 0;
}

.select-slider {
	padding-bottom: 10px;
}

.select-slider .slider {
	margin-left: 5px;
	margin-right: 5px;
}


.repay-handle {
	border-top: 1px dashed #D9D9D9;
	font-size: 13px;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	color: #FC8100;
	display: flex;
	align-items: center;
	height: 35px;

}

.repay-handle image {
	width: 14px;
	height: 14px;
	margin-right: 5px;
	vertical-align: middle;
}

.select-btns {
	display: flex;
	padding-bottom: 15px;
	flex-wrap: wrap;
	justify-content: space-between;
}

.select-btns button {
	width: 68px;
	height: 32px;
	flex: 0 0 68px;
	background: #F7F7F7;
	border-radius: 18px;
	font-size: 14px;
	font-family: PingFangSC-Regular, PingFang SC;
	color: #808080;
	padding: 0;
	line-height: 32px;
	margin: 0 7px 5px 0;
}

.select-btns button:last-child {
	margin-right: auto;
}

.select-btns button:after {
	border: none;
}

.repay-info-box .select-btns button {
	width: 80px;
	flex: 0 0 80px;
}

button.selected {
	background-color: #FF2C43;
	color: #fff;
}

.page-footer .apply-btn {
	margin-top: 10px;
	height: 50px;
	line-height: 50px;
	border-radius: 50px;
	background-color: #FF2C43;
	box-shadow: 0 2px 8px 0 rgba(255, 44, 67, 0.32);
	font-size: 17px;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
}

.page-footer button.disabled {
	background-color: #FFD2D7;
	box-shadow: none;
}

.page-footer button.disabled:after {
	border: none;
}

.repay-calc-tit {
	padding: 0 20px;
}

.repay-calc-type {
	font-size: 17px;
	color: #333;
	font-family: PingFangSC-Medium, PingFang SC;
	font-weight: 500;
	margin-bottom: 5px;
}

.repay-calc-num {
	font-size: 14px;
	font-family: PingFangSC-Regular, PingFang SC;
	color: #808080;
	margin-bottom: 30px;
}

.repay-calc-num text {
	font-family: DIN-Medium;
}



.van-popup__close-icon--top-righ {
	top: 27px;
}


.xy-steps-item {
	padding: 0 20px;
	display: flex;
	min-height: 65px;
	box-sizing: border-box;
}



.xy-steps-item .step-title {
	position: relative;
	flex: 0 0 75px;
	border-right: 1px solid #EAEAEA;
}

.xy-steps-item  .no-border {
	border-right: none;
}

.xy-steps-item .tag {
	position: absolute;
	right: -9.5px;
	top: 0;
	width: 11px;
	height: 11px;
	background-color: #FC8100;
	border-radius: 11px;
	border: 4px solid #fff;
}

.xy-steps-item .tag:after {
	content: '';
	position: absolute;
	width: 5px;
	height: 5px;
	background-color: #fff;
	border-radius: 5px;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	margin: auto;
}

.xy-steps-item .step-content {
	flex: 1;
	padding-left: 35px;
	box-sizing: border-box;
	padding-bottom: 25px;
}

.xy-steps-item .title,
.xy-steps-item .content {
	color: #333;
	font-weight: 500;
	margin-bottom: 4px;
}

.xy-steps-item .title {
	font-size: 15px;
	font-family: PingFangSC-Medium, PingFang SC;
}

.xy-steps-item .content {
	font-size: 16px;
	font-family: DIN-Medium, DIN;
}

.xy-steps-item .title-desc {
	font-size: 13px;
	color: #999;
}

.xy-steps-item .detail {

	font-size: 12px;
	font-family: DIN-Medium, DIN;
	color: #999999;
}