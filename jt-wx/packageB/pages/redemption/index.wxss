/* packageB/pages/redemption/index.wxss */
page {
  background-color: #f3f3f3;
}

.redemption {
  width: 100%;
}
.redemption .all_redemption{
    font-size: 28rpx;
    line-height: 40rpx;
    color: #337EFE;
    position: absolute;
    right: 28px;
    top: 15px;
}
.redemption .content{
  display: flex;
  align-items: center;
  background: #ffffff;
  margin-bottom: 9rpx;
  min-height: 48px;
  position: relative;
}
.redemption .content text{
  width: 30rpx;
  font-size: 22px;
  line-height: 33px;
  height: 59rpx;
  margin-left: 20px;
}
.redemption .content input{
  width: auto;
  height: 60rpx;
  font-size: 28rpx;
  margin-left: 10px;
}
.redemption .header {
  width: 100%;
  background-color: #ffffff;
  padding: 30rpx;
  box-sizing: border-box;
  border-top: 1px solid #f3f3f3;
  margin-bottom: 9rpx;
}

.header .title {
  width: 100%;
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  font-weight: 400;
  text-align: center;
  margin-bottom: 40rpx;
}

.header .num {
  width: 100%;
  font-size: 60rpx;
  font-family: D-DIN-Bold, D-DIN;
  font-weight: bold;
  color: #F65348;
  line-height: 66rpx;
  text-align: center;
  margin-bottom:20rpx;
}

.header .info {
  width: 100%;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
  text-align: center;
}

.header_footer{
  width: 690rpx;
  background-color: #FFF5F6;
  align-items: center;
  justify-content: space-between;
  margin-top: 26rpx;
  border: 1px solid #FCF0F1;
  position: relative;
  font-size: 28rpx;
  color: #666666;
  line-height: 40rpx;
  font-weight: 400;
  box-sizing: border-box;
  padding:34rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.header_footer>view{
  font-weight: bold;
  color: #F65348;
  font-size:48rpx;
  line-height: 52rpx;
  margin-left: 10rpx;
}
.header_footer>view >text{
  font-size: 24rpx;
  font-weight: 400;
  color: #999999;
  line-height: 34rpx;
}
.header_footer image:nth-of-type(1){
  position: absolute;
  top: -16rpx;
  left: 330rpx;
  width: 22rpx;
  height: 22rpx;
}
.header_footer image:nth-of-type(2){
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 24rpx;
  height: 20rpx;
}
.header_footer image:nth-of-type(3){
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  width: 24rpx;
  height: 20rpx;
}


.redemption button{
  width: 650rpx;
  height: 100rpx;
  background-color: #D9D9D9;
  border-radius: 50rpx;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 500;
  line-height: 100rpx;
  margin-top: 40vh;
}
.redemption button::after{
  display: none;
}
.redemption button.ok{
  background-color: #EEA900;
}