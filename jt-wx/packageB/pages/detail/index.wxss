/* pages/my/secureCenter/detail/index.wxss */
page{
  background-color: #F3F3F3;
}
.secureCenter_detail{
  width: 100%;
}
.secureCenter_detail .logo{
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
  width: 750rpx;
  background-color: #ffffff;
}
.secureCenter_detail image{
  width: 484rpx;
  height: 484rpx;
  margin: 0 auto;
}
.secureCenter_detail .button{
  width: 650rpx;
  height: 100rpx;
  background-color: #EEA900;
  line-height: 100rpx;
  font-weight: 500;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 50rpx;
  outline:none;
  border: none;
}
.secureCenter_detail .button::after{
  display: none;
}
.secureCenter_detail .button.disabled{
  background-color: rgba(238, 169, 0, 0.3);
}
.secureCenter_detail .msg{
  width: 690rpx;
  margin: 0 auto;
  font-size: 28rpx;
  color: #999999;
  line-height: 40rpx;
  font-weight: 400;
  margin-top: 20rpx;
}
.secureCenter_detail .footer{
  width: 100%;
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 132rpx;
}