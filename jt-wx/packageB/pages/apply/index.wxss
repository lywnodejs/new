/* pages/deposit/apply/index.wxss */
page{
  background-color: #F3F3F3;
}
.deposit_apply{
  width: 100%;
  height: auto;
}
.deposit_apply .title{
  margin-top: 20rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  width: 100%;
  height: 96rpx;
  background-color: #ffffff;
  font-size: 34rpx;
  line-height: 96rpx;
  font-weight: 400;
}
.deposit_apply .card{
  margin-top: 20rpx;
  width: 100%;
  min-height: 96rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.deposit_apply .card .item{
  height: 94rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.deposit_apply .card .item:nth-of-type(1){
  border-bottom: 1px solid rgba(230, 230, 230, 1);
}
.deposit_apply .card .left{
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
  font-weight: 400;
}
.deposit_apply .card .right{
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  font-weight: 400;
}
.deposit_apply .card .right text{
  margin-right: 10rpx;
}
.deposit_apply .card .right image{
  width: 16rpx;
  height: 24rpx;
  float: right;
  margin-top: 8rpx;
  margin-left: 14rpx;
}
.deposit_apply  .apply{
  margin-top: 20rpx;
  width: 100%;
  height: 230rpx;
  padding: 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
}
.deposit_apply .apply .top{
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
  font-weight: 400;
}
.deposit_apply .apply .content{
  margin-top: 60rpx;
  display: flex;
  align-items: center;
}
.deposit_apply .apply .content image{
  width: 60rpx;
  height: 60rpx;
}
.deposit_apply .apply .content input{
  width: auto;
  height: 60rpx;
  font-size: 60rpx;
  color: #333333;
  line-height: 66rpx;
  font-weight: bold;
}
.deposit_apply .user{
  display: flex;
  align-items: center;
  justify-content:space-between;
  width: 100%;
  height: 96rpx;
  padding:28rpx 30rpx;
  box-sizing: border-box;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.deposit_apply .user text{
  font-size: 28rpx;
  color: #333333;
  font-weight: 400;
  line-height: 49rpx;
}
.deposit_apply .user input{
  width: 60%;
  text-align: right;
}
.input-placeholder{
  font-size: 28rpx;
  color: #999999cc;
  line-height: 40rpx;
}

.page-footer{
	position: fixed;
	left: 0;
	bottom: 0;
  width: 100%;
	padding: 10px 25px 40rpx;
	box-sizing: border-box;
  background-color: #fff;
}

.page-footer .apply-btn{
	height: 50px;
	line-height: 50px;
	border-radius: 50px;
	background-color: #EEA900;
	box-shadow:0 2px 8px 0 rgba(246,83,72,0.32);
	font-size:17px;
	font-family:PingFangSC-Medium,PingFang SC;
	font-weight:500;
}

.page-footer button.disabled{
	background-color: #D9D9D9;
	box-shadow: none;
}

.page-footer button.disabled:after{
	border: none;
}
.hide{
  display: none;
}