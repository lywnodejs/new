/* pages/account/password/change/index.wxss */
.password-change{
  background-color: #F9FAFB;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.password-change>view>view{
  padding: 0 20px;
  background-color: white;
}
.password-change .footer button::after{
  display: none;
}
.password-change .footer button{
  height: 50px;
  line-height: 50px;
  font-size: 17px;
  font-family: PingFangSC-Medium,PingFang SC;
  font-weight: 500;
  color: rgba(255,255,255,1);
  background-color: #EEA900;
  border-radius: 25px;
  width: 650rpx;
  margin-bottom: 15px;
}
.password-change .footer button[disabled]{
  background-color: #D9D9D9;
  color: rgba(255,255,255,1);
}

.item{
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  line-height: 96rpx;
  padding: 28rpx 30rpx;
  font-size: 28rpx;
  color:#333333;
}
.item input{
  width: 400rpx;
  height: 100%;
  font-size: 40rpx;
  line-height: 96rpx;
  margin-left: 30rpx;
}
.item >view{
  width: 180rpx;
}